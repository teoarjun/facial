$(function () {
  var width = $('.nav-stacked').width();
  $('.navbar-header').width(width);
  str = "<img id='image_on_header' src='/logo.png'>"
  $('.navbar-header').children().html(str);
  $('.navbar-header').children().addClass("align-image");
  $('.edit_user_root_link').hide();
  $('.edit_user_root_link').prev().hide();
  $(".sub-menu-container li:nth-child(2) > a").text("Static Content Management");
  $(".last links").hover(
    function() {
      $('.impersonate_user_member_link').tooltip();
  });

  // $('.navbar-header')
  var array_menu = [];
  var lvl_1 = null;
  var count = 0;

  $('.sidebar-nav li').each(function (index, item) {
    if ($(item).hasClass('dropdown-header')) {
      lvl_1 = count++;
      array_menu[lvl_1] = []
    } else {
      $(item).addClass('sub-menu sub-menu-' + lvl_1);
    }
  });

  for (var i = 0; i <= array_menu.length; i++) {
    $('.sub-menu-' + i).wrapAll("<div class='sub-menu-container' />");
  }

  $('.sub-menu-container').hide();

  handleActiveBase();
  function handleActiveBase() {
    $('.sub-menu').each(function () {
      if ($(this).hasClass('active')) {
        $(this).parent().prev().addClass('active');
        $(this).parent().slideDown();
      }
    });
  }

  $('.dropdown-header').bind('click', function () {
    var dropdown_open = $('.dropdown-header').hasClass('open');
    if (dropdown_open == true)
    {
      $('.dropdown-header').removeClass('open');
      $(this).next('.sub-menu-container').hide();
    }
    else
    {
      $('.dropdown-header').removeClass('open');
      $(this).addClass('open');
      $('.dropdown-header').removeClass('active');
      $('.sub-menu-container').stop().slideUp();
      $(this).toggleClass('active');
      $(this).next('.sub-menu-container').stop().slideDown();
    }

  });
});
