<h1>Analytics</h1>
<br>
<br>
	<%=  form_for :data , url: '/get_details' , remote: true do |f| %>
		<%= f.select :country_name, ["All"]+User.pluck(:country).compact.uniq, {:selected => @country, :include_blank => false } %>
		<!-- <select id="select_year" name="data[select_year]" ></select> -->
