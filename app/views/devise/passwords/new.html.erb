<div class="form-logins">
<h2 class="blk-titles">Forgot Password</h2>
  <%= form_for(resource, as: resource_name, url: admin_user_password_path, html: {class: "form-horizontal", method: :post,id: "admin-user-form-id" }) do |f| %>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-3 col-form-label">Email</label>
      <div class="col-sm-9 inputcol-s">
         <%= f.text_field :email , placeholder: "Please enter your registered email." ,autofocus: true , :maxlength => 60 %>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10 signin-btn-s">
       <button type="submit" class="btn btn-primary">Reset Password</button>
     </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10 signin-btn-s">
        <%= link_to "Login Here",new_admin_user_session_path ,class: " col-sm-10 form-check-label" %>
     </div>
    </div>
     
  <% end %>
</div>

