<div class="form-logins">
<h2 class="blk-titles">Change Password</h2>
  <% user = AdminUser.find(params[:format]) %>
  <%= form_for :static_content, url: change_password_path(user), html: { method: :post ,id: "change-admin-user-password" } do |f| %>
    
    <%= f.hidden_field :reset_password_token%>
    <div class="form-group row">
    <label for="inputPassword3" class="col-sm-3 col-form-label">New password</label>
      <div class="col-sm-9 inputcol-s">
         <%= f.password_field :password , placeholder: "Please enter your new password." ,autofocus: true , :maxlength => 30 %>
      </div>
    </div>

    <div class="form-group row">
    <label for="inputPassword3" class="col-sm-3 col-form-label">Confirm new password</label>
      <div class="col-sm-9 inputcol-s">
         <%= f.password_field :password_confirmation , placeholder: "Please confirm your new password." ,autofocus: true , :maxlength => 30 %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10 signin-btn-s">
        <%= f.submit "Change Password" ,class: "btn btn-primary"%>
     </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10 signin-btn-s">
        <%= link_to "Login Here",new_admin_user_session_path ,class: " col-sm-10 form-check-label" %>
     </div>
    </div>
     
  <% end %>
</div>

