<div class="form-logins">
<h2 class="blk-titles">Login</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-3 col-form-label">Email/Username</label>
      <div class="col-sm-9  inputcol-s">
        <%= f.text_field :login , placeholder: "Please enter your email or username." ,autofocus: true , :maxlength => 60 %>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-3 col-form-label">Password</label>
      <div class="col-sm-9 inputcol-s">
        <%= f.password_field :password , placeholder: "Please enter your password." , :maxlength => 16 %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-3"></label>
      <div class="col-sm-9">
        <div class="form-check">
          <label class="form-check-label">
            <%= f.input :remember_me, as: :boolean  %>
          </label>
      	  <%= f.link_to "Forgot Password?",new_admin_user_password_path %>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10 signin-btn-s">
       <button type="submit" class="btn btn-primary">Sign In</button>
      </div>
    </div>
  <% end %>
</div>
